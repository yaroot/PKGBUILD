pkgname=purty-bin
pkgver=6.2.0
pkgrel=1
pkgdesc="A source code formatter for PureScript."
arch=(x86_64)
url=https://gitlab.com/joneshf/purty
license=(BSD)
depends=(purescript)
source=(purty-$pkgver-linux.tar.gz::https://bintray.com/joneshf/generic/download_file?file_path=purty-$pkgver-linux.tar.gz)
