PKGEXT='.pkg.tar'
pkgname=ttf-fz
pkgver=20170404
pkgrel=1
pkgdesc="FZ fonts"
arch=('any')
license=('proprietary')
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
source=(
FZLTHFW.TTF
FZLTHK.TTF
FZXSSFW.TTF
FZXSSK.TTF
FZZHK.TTF
FZZY.ttf
FZZYF.ttf
FZZYJ.ttf
)
md5sums=(
'SKIP'
'SKIP'
'SKIP'
'SKIP'
'SKIP'
'SKIP'
'SKIP'
'SKIP'
)

package() 
{	
    install -dm 755 $pkgdir/usr/share/fonts/{TTF,OTF}
    install -D -m644 $srcdir/*.[Tt][Tt][Ff] $pkgdir/usr/share/fonts/TTF
    # install -D -m644 $srcdir/*.otf $pkgdir/usr/share/fonts/OTF
}
