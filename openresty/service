[Unit]
Description=A high performance web server and a reverse proxy server
After=syslog.target network.target

[Service]
Type=forking
PIDFile=/run/openresty.pid
ExecStartPre=/usr/bin/openresty -t -q -g 'pid /run/openresty.pid; daemon on; master_process on;'
ExecStart=/usr/bin/openresty -g 'pid /run/openresty.pid; daemon on; master_process on;'
ExecReload=/usr/bin/openresty -g 'pid /run/openresty.pid; daemon on; master_process on;' -s reload
ExecStop=/usr/bin/openresty -g 'pid /run/openresty.pid;' -s quit

[Install]
WantedBy=multi-user.target
