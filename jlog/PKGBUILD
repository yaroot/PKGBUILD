pkgname=jlog
pkgver=2.5.2
pkgrel=1
pkgdesc="Journaled Log"
arch=('i686' 'x86_64')
url="https://github.com/omniti-labs/jlog"
source=("https://github.com/omniti-labs/jlog/archive/$pkgver.tar.gz")
license=('BSD')
_watchurl='https://api.github.com/repos/omniti-labs/jlog/releases'

build() {
  cd jlog-$pkgver
  sed -i 's#define DEFAULT_UNIT_LIMIT [(]4#define DEFAULT_UNIT_LIMIT (512#' jlog_private.h
  autoconf
  ./configure --prefix=/usr
  make
}

package() {
  cd jlog-$pkgver
  make DESTDIR=$pkgdir install
}
sha256sums=('f649e289bcecd72341713fc5c0562037433aabaad47831a1249bd4f78bb24e58')
