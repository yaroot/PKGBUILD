pkgname=dbeaver-le
pkgver=21.1.0
pkgrel=1
pkgdesc="A universal database tool for developers and database administrators. Enterprise Edition includes NoSQL database support"
arch=('x86_64')
url="http://dbeaver.com/"
license=("Apache")
depends=('java-runtime>=1.8' 'gtk3' 'gtk-update-icon-cache')
options=(!strip)
_watchurl='https://dbeaver.io/files/'

source_x86_64=(https://dbeaver.com/files/ea/lite/dbeaver-le-${pkgver}-linux.gtk.x86_64.tar.gz)

package() {
    cd $pkgdir
    mkdir -p opt usr/bin

    mv $srcdir/dbeaver opt/$pkgname
    ln -s /opt/${pkgname}/dbeaver usr/bin/dbeaver-le
    echo '-XX:+UseG1GC' >> opt/$pkgname/dbeaver.ini
}

sha256sums_x86_64=('6be6260cd1906f0f24ae1de2be47b842d50c5bfbb3d3a30b4b60df4810dd114c')
