# Contributor: figo1802@gmail.com

pkgname=iptux
pkgver=0.6.2
pkgrel=999
pkgdesc="Lan communication software, compatiable with IP Messenger."
arch=('i686' 'x86_64')
url="https://github.com/iptux-src/iptux"
license=('GPL')
depends=("gtk2" "gconf")
makedepends=("make")
source=(iptux-${pkgver}.tar.gz::"https://github.com/iptux-src/iptux/archive/v${pkgver}.tar.gz")
install=iptux.install
sha256sums=('d567096d97b3b168dde1510f0ca00a13c6f8bb596131c234482377d7d8fb211b')


build() { 
  cd $srcdir/${pkgname}-${pkgver}
  echo `pwd`
  ./configure --prefix=/usr
  make
}

package() {
  cd $srcdir/${pkgname}-${pkgver}
  make DESTDIR=$pkgdir install
}

