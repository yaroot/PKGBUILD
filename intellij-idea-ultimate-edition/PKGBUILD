pkgname=intellij-idea-ultimate-edition
_buildver=201.8538.31
_veryear=2020
_verrelease=1.3
pkgver=${_veryear}.${_verrelease}
pkgrel=1
pkgdesc="Intellij Idea IDE with Intellij JDK"
arch=('any')
options=(!strip)
url="http://www.jetbrains.com/idea/"
license=('CUSTOM')
depends=('giflib' 'libxtst')
source=("https://download.jetbrains.com/idea/ideaIU-${pkgver}.tar.gz")

package() {
    cd $srcdir
    mkdir -p $pkgdir/opt $pkgdir/usr/bin

    cp -r $srcdir/idea-IU-$_buildver $pkgdir/opt/$pkgname
    ln -sv /opt/$pkgname/bin/idea.sh $pkgdir/usr/bin/ideau
}

sha256sums=('b238a4613bf87daa67f807381f6c7f951b345e0fb03a7ef1dc3c7c4735f43607')
