pkgname=intellij-idea-ultimate-edition
_veryear=2020
_verrelease=2
pkgver=${_veryear}.${_verrelease}
pkgrel=1
pkgdesc="Intellij Idea IDE with Intellij JDK"
arch=('any')
options=(!strip)
url="http://www.jetbrains.com/idea/"
license=('CUSTOM')
depends=('giflib' 'libxtst')
source=("https://download.jetbrains.com/idea/ideaIU-${pkgver}.tar.gz")

package() {
    cd $srcdir
    mkdir -p $pkgdir/opt $pkgdir/usr/bin

    cp -r $srcdir/idea-IU-*/ $pkgdir/opt/$pkgname
    ln -s /opt/$pkgname/bin/idea.sh $pkgdir/usr/bin/ideau
}

sha256sums=('0a097d9e20f239bfd28be17ad36c5ce2cb7814c84f90da6ca827e5ea9e3ef8be')
